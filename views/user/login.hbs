
<link rel="stylesheet" href="/stylesheets/user-login.css">	

	<div class="main">  	
		<input type="checkbox" id="chk" aria-hidden="true">

			<div class="signup">
				<form action="/signup" method="post">
				
					<label for="chk" aria-hidden="true">Sign up</label>
					{{#if logginErr}}
					<p class="error text-danger text-center">Invalid Username or Password</p>
					{{/if}}
					{{#if loginvalid}}
					<p class="error text-danger text-center">The Email id is already exist</p>
					{{/if}}
					<input type="text" name="Name" placeholder="User name" required="">
					<input type="email" name="Email" placeholder="Email" required="">
					<input type="password" name="Password" placeholder="Password" required="" id="id_password">
					<button>Sign up</button>
				</form>
			</div>


			<div class="login">
				
				<form action="/login" method="post">
					<label for="chk" aria-hidden="true">Login</label>
				
					
				
					<input type="email" name="Email" placeholder="Email" required="" id="userID">
					<input type="password" name="Password" placeholder="Password" required="" id="password">
					<button>Login</button>
					
				</form>
			</div>
	</div>