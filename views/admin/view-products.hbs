
<link rel="stylesheet" href="/stylesheets/table.css">	

<section>
    <div class="container">
        <div class="mt-5 ">
            <a href="/admin/add-products" class="btn btn-success text-right" >Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Discription</th>
      <th scope="col">Image</th>
      <th scope="col">Price</th>
      <th scope="col">Options</th>

    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Discription}}</td>
      <td><img style="height:50px;width:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>{{this.Price}}</td>
      <th><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" >Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.Name}}')" >Delete</a></th>
      
    </tr>
    {{/each}}
  </tbody>
  
</table>
    </div>
</section>
<script>
$(function () {
    $('#productsTable').DataTable();
} );
</script>